{
  "extends": "@pocket-tools/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src"
  },
  "exclude": ["node_modules/", "dist/"],
  "include": ["src/**/*.ts", "src/config"]
}
